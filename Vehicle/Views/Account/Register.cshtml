
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<style>
    .hidden {
        display: none;
    }
</style>
<div class="app-main__inner">
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div class="page-title-icon">
                    <i class="pe-7s-add-user icon-gradient bg-mean-fruit">
                    </i>
                </div>
                <div>
                    New Agent
                    <div class="page-title-subheading">
                        Fill the form below to register a new agent.
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="col-md-12 hidden" id="error">
        <div class="alert alert-warning fade show" role="alert">
            <h5>Error!</h5>
            <p class="mb-0" id="msg"></p>
        </div>
    </div>
    <div class="col-md-12 hidden" id="success">
        <div class="alert alert-success fade show" role="alert">
            <h5>Success!</h5>
            <p class="mb-0" id="msgs"></p>
        </div>
    </div>
    <div class="main-card mb-3 card">

        <div class="card-body">
            <h5 class="card-title">ADD Agent</h5>
            <div class="">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="position-relative form-group"><label for="first-name" class="">First Name</label><input name="first-name" id="first-name" placeholder="enter first name" type="text" class="form-control"></div>
                    </div>
                    <div class="col-md-6">
                        <div class="position-relative form-group">
                            <label for="last-name" class="">Last Name</label><input name="last-name" id="last-name" placeholder="enter last name" type="text"
                                                                                    class="form-control">
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-4">
                        <div class="position-relative form-group"><label for="login_name" class="">Login Name</label><input name="login_name" placeholder="enter e-mail address" id="login_name" type="text" class="form-control"></div>
                    </div>
                    <div class="col-md-4">
                        <div class="position-relative form-group"><label for="password" class="">Password</label><input name="password" id="password" placeholder="enter password" type="password" class="form-control"></div>
                    </div>
                    <div class="col-md-4">
                        <div class="position-relative form-group"><label for="repassword" class="">Very Password</label><input name="repassword" id="repassword" placeholder="confirm password" type="password" class="form-control"></div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="position-relative form-group"><label for="phone" class="">Phone Number</label><input name="phone" id="phone" placeholder="enter phone number" type="text" class="form-control"></div>
                    </div>
                    <div class="col-md-6">
                        <div class="position-relative form-group">
                            <label for="usertype" class="">Admin Type</label>
                            <select name="usertype" id="usertype" class="form-control">
                                <option value="agent">Agent</option>
                                <option value="admin">Admin</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="position-relative row form-group">
                    <label for="exampleFile" class="col-sm-2 col-form-label">User Photo</label>
                    <div class="col-sm-10">
                        <input name="file" id="exampleFile" type="file" class="form-control-file">
                        <small class="form-text text-muted">This is photo of the owner of the vehicle(s) to be registered.</small>
                    </div>
                </div>
                <a href="/account" class="mt-2 btn btn-primary pull-left">Login</a>

                <a id="btnRegisterUser" href="javascript:addagents();" class="mt-2 btn btn-primary pull-right">Register Agent</a>

                <span id="error" class="text-danger pull-right"></span>
                <button type="button" id="processor" class="btn-open-options btn btn-warning pull-right hidden">
                    <i class="fa fa-cog fa-w-16 fa-spin fa-2x"></i>
                </button>
            </div>
        </div>
    </div>
</div>

